        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Calculator" Height="544" Width="342"
        WindowStyle="ThreeDBorderWindow" Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.85*"/>
            <RowDefinition Height="1.9*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Canvas>
            <Label Canvas.Top="auto" Canvas.Left="auto" Margin="2" FontStretch="ExtraExpanded" FontSize="17" Height="34" Padding="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                &#9776;
            </Label>

            <Label Canvas.Left="40" Margin="5" FontWeight="Bold" FontSize="21" Canvas.Top="1.8">
                Standard
            </Label>
        </Canvas>

        <Canvas Grid.Row="1">
            <TextBox x:Name="textBox" Width="315" Canvas.Top="0" Height="75" 
                     FontWeight="SemiBold" FontSize="45"
                     BorderThickness="0" Background="WhiteSmoke" 
                     IsEnabled="False" 
                     >
                0
            </TextBox>
            <Canvas>
                <Label x:Name="label" Canvas.Top="-21" Canvas.Left="206" FontSize="15" Foreground="Gray">
                    
                </Label>
            </Canvas>
        </Canvas>

        <Canvas Grid.Row="2" >
            <Label Margin="-4" Canvas.Left="16" FontSize="14" Foreground="Gray">
                MC
            </Label>
            <Label Margin="-4" Canvas.Left="71" FontSize="14" Foreground="Gray">
                MR
            </Label>
            <Label Margin="-4" Canvas.Left="125" FontSize="14">
